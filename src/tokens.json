{
    "font": { "size": "1rem", "family": "unset" },
    "border": { "radius": ".5rem", "width": "1px" },
    "opacity": { "unselect": ".25", "unfocus": ".5", "disabled": ".5" },
    "size": {
        "": "4px",
        "xl": "calc(@size * 10)",
        "l": "calc(@size * 8)",
        "m": "calc(@size * 7)",
        "s": "calc(@size * 5)",
        "xs": "calc(@size * 4)",
        "xxs": "calc(@size * 3)"
    },
    "color": {
        "primary": { "10": "#fff", "30": "transparent", "60": "#2C3A41" },
        "action": {
            "10": "@color.primary.60",
            "30": "transparent",
            "60": "#fff"
        },
        "toggle": {
            "10": "@color.primary.10",
            "30": "@color.primary.30",
            "60": "@color.primary.60"
        },
        "layer": {
            "10": "@color.primary.60",
            "30": "transparent",
            "60": "#fff"
        },
        "scroll": {
            "10": "@color.neutral.10",
            "30": "transparent",
            "60": "transparent"
        },
        "input": {
            "10": "@color.action.10",
            "30": "@color.action.30",
            "60": "@color.action.60"
        },
        "button": {
            "10": "@color.action.10",
            "30": "@color.action.30",
            "60": "@color.action.60"
        },
        "success": { "10": "#fff", "30": "transparent", "60": "#18D47C" },
        "info": { "10": "#fff", "30": "transparent", "60": "#0080FF" },
        "warning": { "10": "#fff", "30": "transparent", "60": "#F9AA33" },
        "danger": { "10": "#fff", "30": "transparent", "60": "#FF5B5B" },
        "neutral": {
            "10": "@color.primary.60",
            "30": "transparent",
            "60": "#D8E2EA"
        }
    },
    "input": {
        "border": {
            "width": "@border.width",
            "style": "solid",
            "color": "@color.input.30"
        }
    },
    "tab": { "width": "100%", "height": "100%", "radius": "100px" },
    "transition": { "action": ".2s ease all" },
    "shadow": { "layer": "0px 12px 22px rgba(0,0,0 ,.05)" },
    "variation": {
        "size=small": {
            "font": { "size": "0.875rem" },
            "size": {
                "xl": "calc(@size * 8)",
                "l": "calc(@size * 7)",
                "m": "calc(@size * 5)",
                "s": "calc(@size * 3.5)"
            }
        }
    }
}
